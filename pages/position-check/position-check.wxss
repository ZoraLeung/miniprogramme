/* position-check.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.form-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-of-type {
  margin-bottom: 60rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input:focus {
  border-color: #007aff;
  background: white;
}

.query-btn {
  width: 100%;
  height: 80rpx;
  background: #007aff;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.query-btn[disabled] {
  background: #ccc;
}

.result-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.1);
}

.result-header {
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-content {
  margin-bottom: 40rpx;
}

.result-text {
  font-size: 26rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  display: block;
}

.result-text.available {
  color: #52c41a;
  background: #f6ffed;
  border: 1rpx solid #d9f7be;
}

.result-text.protected {
  color: #ff4d4f;
  background: #fff2f0;
  border: 1rpx solid #ffccc7;
}

.continue-btn {
  width: 100%;
  height: 80rpx;
  background: #52c41a;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.tips {
  background: #f0f9ff;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #e1f5fe;
}

.tips-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #0277bd;
  display: block;
  margin-bottom: 16rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #01579b;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.5;
}