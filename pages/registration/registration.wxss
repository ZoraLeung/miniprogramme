/* registration.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.form-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.1);
}

.form-section {
  margin-bottom: 60rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input:focus {
  border-color: #007aff;
  background: white;
}

.input[disabled] {
  background: #f5f5f5;
  color: #999;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  background: #fafafa;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.textarea:focus {
  border-color: #007aff;
  background: white;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  background: white;
  border-top: 1rpx solid #eee;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background: #007aff;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}