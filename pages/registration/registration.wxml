<!--registration.wxml-->
<view class="container">
  <view class="header">
    <text class="title">填写报名信息</text>
    <text class="subtitle">请如实填写以下信息</text>
  </view>
  
  <form bindsubmit="submitForm">
    <view class="form-card">
      <view class="form-section">
        <text class="section-title">基本信息</text>
        
        <view class="form-group">
          <text class="label">姓名 <text class="required">*</text></text>
          <input class="input" 
                 placeholder="请输入真实姓名" 
                 value="{{formData.name}}" 
                 bindinput="onNameInput" />
        </view>
        
        <view class="form-group">
          <text class="label">身份证号 <text class="required">*</text></text>
          <input class="input" 
                 disabled="true"
                 value="{{formData.idNumber}}" />
        </view>
        
        <view class="form-group">
          <text class="label">手机号码 <text class="required">*</text></text>
          <input class="input" 
                 placeholder="请输入手机号码" 
                 type="number"
                 maxlength="11"
                 value="{{formData.phone}}" 
                 bindinput="onPhoneInput" />
        </view>
        
        <view class="form-group">
          <text class="label">电子邮箱 <text class="required">*</text></text>
          <input class="input" 
                 placeholder="请输入邮箱地址" 
                 value="{{formData.email}}" 
                 bindinput="onEmailInput" />
        </view>
      </view>
      
      <view class="form-section">
        <text class="section-title">报名详情</text>
        
        <view class="form-group">
          <text class="label">报名岗位 <text class="required">*</text></text>
          <picker class="picker"
                  bindchange="onPositionChange" 
                  value="{{positionIndex}}" 
                  range="{{positions}}">
            <view class="picker-text">{{positions[positionIndex] || '请选择岗位'}}</view>
          </picker>
        </view>
        
        <view class="form-group">
          <text class="label">学历 <text class="required">*</text></text>
          <picker class="picker"
                  bindchange="onEducationChange" 
                  value="{{educationIndex}}" 
                  range="{{educations}}">
            <view class="picker-text">{{educations[educationIndex] || '请选择学历'}}</view>
          </picker>
        </view>
        
        <view class="form-group">
          <text class="label">工作经验</text>
          <textarea class="textarea" 
                    placeholder="请简述相关工作经验（选填）" 
                    value="{{formData.experience}}" 
                    bindinput="onExperienceInput"
                    maxlength="200"></textarea>
        </view>
        
        <view class="form-group">
          <text class="label">备注信息</text>
          <textarea class="textarea" 
                    placeholder="其他需要说明的信息（选填）" 
                    value="{{formData.remark}}" 
                    bindinput="onRemarkInput"
                    maxlength="200"></textarea>
        </view>
      </view>
    </view>
    
    <view class="footer">
      <button class="submit-btn" bindtap="submitForm">提交报名信息</button>
    </view>
  </form>
</view>