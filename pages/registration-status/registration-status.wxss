/* registration-status.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
}

.status-icon.success {
  background: #52c41a;
  color: white;
}

.status-icon.failed {
  background: #ff4d4f;
  color: white;
}

.status-icon.waiting {
  background: #faad14;
  color: white;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.main {
  flex: 1;
}

.status-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.card-content {
  text-align: center;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.card-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.countdown-section {
  background: #f0f8f0;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 2rpx solid #52c41a;
}

.countdown-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.countdown-time {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
}

.tips-section, .suggestion-section, .waiting-section {
  text-align: left;
  margin-top: 30rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.tips-title, .suggestion-title, .waiting-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.tips-text, .suggestion-text, .waiting-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: block;
}

.footer {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.primary-btn {
  background: #007aff;
  color: white;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.secondary-btn {
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 32rpx;
}

.primary-btn:active {
  background: #0056b3;
}

.secondary-btn:active {
  background: #f8f9fa;
}