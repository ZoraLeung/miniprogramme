/* approval-result.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
}

.status-icon.success {
  background: #52c41a;
  color: white;
}

.status-icon.pending {
  background: #faad14;
  color: white;
}

.status-icon.rejected {
  background: #ff4d4f;
  color: white;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.main {
  flex: 1;
}

.success-card, .info-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
}

.card-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 40rpx;
}

.qr-section {
  text-align: center;
  margin: 40rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.qr-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.qr-code {
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.qr-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.contact-info {
  margin-top: 40rpx;
}

.contact-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  color: #666;
  font-size: 28rpx;
  width: 160rpx;
}

.contact-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.copy-contact-btn {
  background: #007aff;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: none;
  margin-left: 20rpx;
}

.footer {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.primary-btn {
  background: #007aff;
  color: white;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.secondary-btn {
  background: white;
  color: #007aff;
  border: 2rpx solid #007aff;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 32rpx;
}